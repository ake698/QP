@{
    ViewData["Title"] = $"{ViewBag.video.Name}在线观看免费完整版 - 千频影视";
    ViewData["KeyWords"] = $"{ViewBag.video.Name}在线免费观看";
    ViewData["Description"] = $"{ViewBag.video.Describes}";

    string pre = $"?number={ViewBag.vo.Number - 1}&resourceid={ViewBag.vo.ResourceId}";
    string next = $"?number={ViewBag.vo.Number + 1}&resourceid={ViewBag.vo.ResourceId}";
    if(ViewBag.vo.Number >= ViewBag.currentMax)
    {
        next = "";
    }
    if(ViewBag.vo.Number == 1)
    {
        pre = "";
    }
    string playActive = "";
}
<div class="row">
    <div class="col-lg-wide-75 col-xs-1 padding-0">
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel-bd">
                    <div class="stui-player col-pd">
                        <div class="stui-player__video clearfix" style="height: 471.094px;">
                            <script type="text/javascript">
                                var player_data = { "flag": "play", "encrypt": 0, "trysee": 0, "points": 0, "link": "/", "link_next": "@next", "link_pre": "@pre", "url": "@ViewBag.currentAddress", "url_next": "http://youku.cdn7-okzy.com/share/954c42feaba402a134e4d89ae31cc766", "from": "kuyun", "server": "no", "note": "" }
                            </script>
                            <script type="text/javascript" src="~/js/playerconfig.js"></script>
                            <script type="text/javascript" src="~/js/player.js"></script>
                            <style>
                                .MacPlayer {
                                    background: #000000;
                                    font-size: 14px;
                                    color: #F6F6F6;
                                    margin: 0px;
                                    padding: 0px;
                                    position: relative;
                                    overflow: hidden;
                                    width: 100%;
                                    height: 100%;
                                    min-height: 100px;
                                }

                                    .MacPlayer table {
                                        width: 100%;
                                        height: 100%;
                                    }

                                    .MacPlayer #playleft {
                                        position: inherit;
                                        !important;
                                        width: 100%;
                                        height: 100%;
                                    }
                            </style>

                            <script src="~/js/kuyun.js"></script>
                        </div>
                        <div class="stui-player__detail detail">
                            <ul class="more-btn">
                                <li><a href="javascript:void(0);" class="mac_ulog btn btn-default" data-type="2" data-mid="1" data-id="43441">收藏<i class="icon iconfont icon-favorite hidden-xs"></i></a></li>
                                <li><a href="javascript:;" class="btn btn-default" onclick="MAC.Gbook.Report('编号【@ViewBag.video.Id】名称【@ViewBag.video.Name】不能观看请检查修复，页面地址' + location.href)">报错<i class="icon iconfont icon-close hidden-xs"></i></a></li>
                                <li><a class="btn btn-default copylink" href="javascript:;">分享<i class="icon iconfont icon-share hidden-xs"></i></a></li>
                                <li><a class="btn btn-default" href="@pre"><i class="icon iconfont icon-back hidden-xs"></i>上一集</a></li>
                                <li><a class="btn btn-default" href="@next">下一集<i class="icon iconfont icon-more hidden-xs"></i></a></li>
                            </ul>
                            <h1 class="title">@ViewBag.video.Name</h1>
                            <p class="data margin-0"><span class="text-muted">类型：</span>@ViewBag.video.CategoryTypeNames<span class="split-line"></span><span class="text-muted">地区：</span>@ViewBag.video.AreaName<span class="split-line"></span><span class="text-muted">年份：</span>@ViewBag.video.Year</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="visible-xs" style=" padding:0 20px 10px;">
            <a class="open-share btn btn-block btn-lg btn-primary" href="javascript:;"><i class="icon iconfont icon-share"></i>分享给朋友观看</a>
        </div>
        @foreach (var play in ViewBag.play)
        {
            <div class="stui-pannel stui-pannel-bg clearfix">
                <div class="stui-pannel-box b playlist mb">
                    <div class="stui-pannel_hd">
                        <div class="stui-pannel__head bottom-line active clearfix">
                            <span class="nore text-muted pull-right">来源：@play.ResourceName</span>
                            <h3 class="title">@play.ResourceName</h3>
                        </div>
                    </div>
                    <div class="stui-pannel_bd col-pd clearfix">
                        <ul class="stui-content__playlist clearfix">
                            @for (int i = 1; i <= play.PlayAddresses.Length; i++)
                            {
                                @if (play.ResourceId == ViewBag.vo.ResourceId && i == ViewBag.vo.Number)
                                    playActive = "active";
                                else
                                    playActive = "";
                                <li class="@playActive"><a href="/play/@ViewBag.Video.Id?number=@i&resource=@play.ResourceId"><span>@i</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel_hd">
                    <div class="stui-pannel__head clearfix">
                        <h3 class="title"><img src="~/images/icon_30.png" />剧情介绍</h3>
                    </div>
                </div>
                <div class="stui-pannel_bd">
                    <div class="detail col-pd">
                        <span class="detail-sketch">@Html.Raw(@ViewBag.Video.Describes)</span>
                        <span class="detail-content" style="display: none;">@Html.Raw(@ViewBag.Video.Describes)</span>
                        @*<a class="detail-more" href="javascript:;">详情<i class="icon iconfont icon-moreunfold"></i></a>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel_hd">
                    <div class="stui-pannel__head clearfix">
                        <h3 class="title"><img src="~/images/icon_6.png" />猜你喜欢</h3>
                    </div>
                </div>
                <div class="stui-pannel_bd">
                    <ul class="stui-vodlist__bd clearfix">
                        @foreach (var recommend in ViewBag.recommends)
                        {
                            <li class="col-md-5 col-sm-4 col-xs-3">
                                <div class="stui-vodlist__box">
                                    <a class="stui-vodlist__thumb lazyload" href="/detail/@recommend.Id" title="@recommend.Name" style="background-image: url(@recommend.Image);"><span class="play hidden-xs"></span><span class="pic-text text-right">@recommend.Remark</span></a>
                                    <div class="stui-vodlist__detail">
                                        <h4 class="title text-overflow"><a href="/detail/@recommend.Id" title="@recommend.Name">@recommend.Name</a></h4>
                                        <p class="text text-overflow text-muted hidden-xs">@recommend.Actor</p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-wide-25 col-xs-1 stui-pannel-side visible-lg">
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel_hd">
                    <div class="text-center">
                        <p class="text-muted">扫码用手机观看</p>
                        <p id="qrcode2" style="padding-left: 35px;" title="#">
                        </p>
                        <p class="text-muted margin-0">分享到朋友圈</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel_hd">
                    <div class="stui-pannel__head clearfix">
                        <a class="more text-muted pull-right cc_pointer" href="/series/@ViewBag.tops[0].SeriesTypeId">更多<i class="icon iconfont icon-more"></i></a>
                        <h3 class="title"><img src="~/images/icon_12.png" /><a href="/series/@ViewBag.tops[0].SeriesTypeId" target="_blank"></a>&nbsp;热播榜</h3>
                    </div>
                </div>
                <div class="stui-pannel_bd">
                    <ul class="stui-vodlist__media active col-pd clearfix">
                        <li>
                            <div class="thumb">
                                <a class="m-thumb stui-vodlist__thumb lazyload" href="/detail/@ViewBag.tops[0].Id" title="@ViewBag.tops[0].Name" style="background-image: url(&quot;@ViewBag.tops[0].Image&quot;);"></a>
                            </div>
                            <div class="detail detail-side">
                                <h4 class="title"><a href="#"><i class="icon iconfont icon-more text-muted pull-right"></i>@ViewBag.tops[0].Name</a></h4>
                                <p class="font-12"><span class="text-muted">类型：</span>@ViewBag.tops[0].CategoryTypeNames</p>
                                <p class="font-12 margin-0"><span class="text-muted">地区：</span>@ViewBag.tops[0].AreaName</p>
                            </div>
                        </li>
                    </ul>
                    <ul class="stui-vodlist__rank col-pd over-text clearfix">
                        @{
                            string[] classes = new string[] { "badge-first", "badge-second", "badge-third", "", "", "", "", "", "", "" };
                        }
                        @for (int index = 1; index <= ViewBag.tops.Count; index++)
                        {
                            <li class="over-text"><a href="/detail/@ViewBag.tops[index - 1].Id" title="@ViewBag.tops[index - 1].Name"><span class="text-muted pull-right hidden-md">@ViewBag.tops[index - 1].Remark</span><span class="badge @classes[index-1]">@index</span>@ViewBag.tops[index - 1].Name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="stui-pannel stui-pannel-bg clearfix">
            <div class="stui-pannel-box">
                <div class="stui-pannel_hd">
                    <div class="stui-pannel__head clearfix">
                        <a class="more text-muted pull-right" href="#">更多<i class="icon iconfont icon-more"></i></a>
                        <h3 class="title"><img src="~/images/icon_5.png" />推荐专题</h3>
                    </div>
                </div>
                <div class="stui-pannel_bd">
                    <ul class="stui-vodlist clearfix"></ul>
                </div>
            </div>
        </div>
    </div>
</div>